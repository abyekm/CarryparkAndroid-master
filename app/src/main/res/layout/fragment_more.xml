<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="net.ui.ForgotPinActivity"
    android:orientation="vertical"
    android:weightSum="3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight=".75">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight=".70"
                    android:paddingTop="40dp"
                    android:paddingBottom="40dp"
                    android:paddingRight="30dp"
                    android:id="@+id/img_back_arrow"
                    app:srcCompat="@drawable/ic_left_arrow"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1.6"
                    android:layout_height="100dp"
                    android:padding="25dp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/cp_withouticon_logo"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".70"
                    android:visibility="gone"
                    android:layout_height="100dp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/cp_withouticon_logo"/>
            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_user_demo_img"/>
                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:text="John Doe"/>
            </LinearLayout>-->

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.25"
        android:background="@drawable/curved_top_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin_large"
            android:paddingRight="@dimen/activity_horizontal_margin_large">

            <!--<android.support.design.widget.TextInputLayout
                android:id="@+id/til_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    android:textColor="@color/colorBlack"
                    android:text="John Doe"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"/>
                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center|start"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_more_change_language"
                    android:hint="@string/change_language"
                    android:textColorHint="@color/colorBlack" />

           <!-- </android.support.design.widget.TextInputLayout>-->



            <!--<android.support.design.widget.TextInputLayout
                android:id="@+id/til_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >-->
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>



            <!--</android.support.design.widget.TextInputLayout>-->

            <!--<android.support.design.widget.TextInputLayout
                android:id="@+id/til_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >-->
            <LinearLayout android:layout_width="match_parent"
                          android:background="@drawable/bg_squre_field"
                          android:layout_marginTop="20dp"
                          android:layout_height="wrap_content"
            >
                <ImageView android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_marginLeft="5dp"
                           android:layout_marginRight="5dp"
                           android:src="@drawable/edit_acc_details"
                android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_edit_account_details"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center|start"
                    android:drawablePadding="10dp"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/colorBlack"
                    android:hint="@string/editAccountDetails"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:background="@drawable/bg_squre_field"
                          android:layout_marginTop="20dp"
                          android:layout_height="wrap_content"
            >
                <ImageView android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_marginLeft="5dp"
                           android:layout_marginRight="5dp"
                           android:src="@drawable/help"
                           android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_help"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center|start"
                    android:drawablePadding="10dp"
                    android:textStyle="bold"

                    android:layout_margin="10dp"
                    android:textColorHint="@color/colorBlack"
                    android:hint="@string/help"
                />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:background="@drawable/bg_squre_field"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="20dp"

            >
                <ImageView android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_marginLeft="5dp"
                           android:layout_marginRight="5dp"
                           android:src="@drawable/logoutbig"
                           android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center|start"
                    android:layout_margin="10dp"
                    android:textStyle="bold"

                    android:drawablePadding="10dp"
                    android:hint="@string/logout"
                    android:maxLength="4"
                    android:textColorHint="@color/colorBlack" />

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:background="@drawable/bg_squre_field"
                          android:layout_marginTop="20dp"
                          android:visibility="gone"
                          android:layout_height="wrap_content"
            >
                <TextView
                    android:id="@+id/tv_change_pin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center|start"
                    android:drawablePadding="10dp"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/ic_more_change_pin"
                    android:textColorHint="@color/colorBlack"
                    android:hint="@string/changePin"
                />
            </LinearLayout>


            <!--</android.support.design.widget.TextInputLayout>-->


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
