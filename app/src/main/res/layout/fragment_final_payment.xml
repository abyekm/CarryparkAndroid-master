<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorPrimary"
                                                   tools:context=".FinalPaymentFragment"
>


    <Button
        android:id="@+id/button_pay_to_payment_success_final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonStyle"

        android:background="@drawable/btnbg_curved_accent_red_bg"
        android:text="@string/pay"
        android:textSize="@dimen/text_size_button"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/colorButtonWhite"
        android:textAllCaps="false"
        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_outer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout   android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@color/colorPrimary"
                      android:orientation="vertical"
                      android:weightSum="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight=".75">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight=".70"
                            android:paddingTop="40dp"
                            android:paddingBottom="40dp"
                            android:paddingRight="30dp"
                            android:id="@+id/img_back_arrow"
                            android:visibility="invisible"
                            app:srcCompat="@drawable/ic_left_arrow"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1.6"
                            android:layout_height="100dp"
                            android:padding="25dp"
                            android:layout_gravity="center|top"
                            android:src="@drawable/cp_withouticon_logo"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight=".70"
                            android:visibility="gone"
                            android:layout_height="100dp"
                            android:layout_gravity="center|top"
                            android:src="@drawable/cp_withouticon_logo"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center|start"
                        android:text="@string/connetDev"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.25"
                android:paddingTop="5sp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin_large"
                android:paddingRight="@dimen/activity_horizontal_margin_large"
                android:background="@drawable/curved_top_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--
                                android:weightSum="3"
                    -->
                    <ImageView
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        app:srcCompat="@drawable/ic_user_demo_img"/>
                    <TextView
                        android:layout_weight="2.2"
                        android:id="@+id/tv_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:drawablePadding="10dp"
                        android:layout_gravity="center"
                        android:hint="Hi,John Doe"
                        android:textColor="@color/colorBlack" />
                    <ImageView
                        android:visibility="gone"
                        android:layout_weight=".4"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_edit"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5sp"
                    android:background="@color/colorPrimary"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:layout_marginBottom="100dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginBottom="200dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_final_payment_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:text="@string/payment"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:orientation="horizontal"
                                android:gravity="start|center"
                                android:weightSum="4">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/payment_page_txt_size"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:text=" : "/>
                                <TextView
                                    android:id="@+id/tv_time_remaining"
                                    android:textColor="@color/colorAccent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/payment_page_txt_size"
                                    android:text="14 m 41 s"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="center|end"
                                android:orientation="horizontal"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/payment_page_txt_size"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorBlack"
                                    android:text=" : "/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/payment_page_txt_size"
                                    />

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="2">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:textSize="@dimen/payment_page_txt_size"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:text="@string/device_name"/>
                            <TextView
                                android:id="@+id/tv_device_name"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="end"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:text="name_device"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:visibility="gone"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="2">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/payment_page_txt_size"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/tv_rate_per_hour_final"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="¥ 000"
                                android:textStyle="bold"
                                android:textSize="@dimen/payment_page_txt_size"
                                android:gravity="end"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="2">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:textSize="@dimen/payment_page_txt_size"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"/>

                                "/>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="end"
                                android:textStyle="bold"
                                android:id="@+id/tv_start_time"
                                android:textSize="@dimen/payment_page_txt_size"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:text="000"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="2">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:textSize="@dimen/payment_page_txt_size"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="end"
                                android:id="@+id/tv_end_time"
                                android:textSize="@dimen/payment_page_txt_size"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"
                                android:text="0000"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="2">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:textSize="@dimen/payment_page_txt_size"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="end"
                                android:id="@+id/tv_duration_used"
                                android:textSize="@dimen/payment_page_txt_size"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"
                                android:text="0000"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/payment_page_txt_size" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/payment_page_txt_size" />
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/payment_page_txt_size"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:gravity="right"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:visibility="gone"
                                    android:layout_marginTop="20dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_rate_per_hour_usage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="¥ 000"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/payment_page_txt_size" />
                                    <TextView
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:gravity="center"
                                        android:text=" x "/>
                                    <TextView
                                        android:id="@+id/tv_hour_usage"
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:text="0000"/>
                                    <TextView
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:textStyle="bold"
                                        android:text=" = "/>
                                    <TextView
                                        android:id="@+id/tv_usage_amt"
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:text="000"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_usageAmt_total"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="¥ 000"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/payment_page_txt_size" />
                                    <TextView
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:gravity="center"
                                        android:text=" + "/>
                                    <TextView
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tv_initialAmt_total"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:text="0000"/>
                                    <TextView
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:textStyle="bold"
                                        android:text=" = "/>
                                    <TextView
                                        android:id="@+id/tv_totalAmt_total"
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:text="000"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/tv_rate_per_hour_3_final"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:text="¥ 000"
                                        android:textStyle="bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:visibility="gone"
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:text=" - "/>
                                    <TextView
                                        android:visibility="gone"
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/rate_per_hr_minus_final"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:text="0000"/>
                                    <TextView
                                        android:visibility="gone"
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:text=" = "/>
                                    <TextView
                                        android:layout_marginTop="5dp"
                                        android:id="@+id/tv_res_mul_3_final_Amount"
                                        android:textColor="@color/colorBlack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/payment_page_txt_size"
                                        android:text="000"/>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"

        android:gravity="center" tools:layout_editor_absoluteX="0dp" tools:layout_editor_absoluteY="147dp">



    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_marginBottom="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_pay_to_payment_success_final"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_final_pay_amount_label"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_final_pay_amount"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:gravity="right"
            android:textSize="15sp"
            android:text="¥ 000"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>